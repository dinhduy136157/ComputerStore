@model IEnumerable<ComputerStore.Models.OrderItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Minton</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Quản lý đơn hàng</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Quản lý đơn hàng</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="header-title">Danh sách đơn hàng</h4>
                            <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Tên KH</th>
                                        <th>Ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Thời gian</th>
                                        <th>Số lượng</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OrderItemID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Order.User.UserName)
                                            </td>
                                            <td>
                                                <image style="height: 120px" src="~/Sources/@Html.DisplayFor(modelItem => item.Product.Image1)"></image>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Product.ProductName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Order.OrderDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @if (item.Status == "Đang chờ xác nhận")
                                                {
                                                    <span class="badge label-table badge-secondary">@Html.DisplayFor(modelItem => item.Status)</span>
                                                }
                                                else if (item.Status == "Giao hàng thành công")
                                                {
                                                    <span class="badge label-table badge-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                                }
                                                else if (item.Status == "Đã huỷ")
                                                {
                                                    <span class="badge label-table badge-danger">@Html.DisplayFor(modelItem => item.Status)</span>
                                                }
                                            </td>

                                            <td>
                                                @Html.ActionLink("edit", "edit", new { id = item.OrderItemID }) |
                                                @Html.ActionLink("details", "details", new { id = item.OrderItemID }) |
                                                @Html.ActionLink("delete", "delete", new { id = item.OrderItemID })
                                            </td>
                                            <td>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div> <!-- end card body-->
                    </div> <!-- end card -->
                </div><!-- end col-->
            </div>
            <!-- end row-->
        </div> <!-- container -->

    </div> <!-- content -->

    
</div>