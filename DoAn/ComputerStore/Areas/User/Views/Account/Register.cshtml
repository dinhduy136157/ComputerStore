@model ComputerStore.Models.User


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng Ký</title>
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/assets_user/css/register.css")">
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card register-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="~/assets_user/image/logo/logo_header.svg" alt="register" class="register-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="~/assets_user/image/logo/logo_header.svg" alt="logo" class="logo">
                            </div>
                            <p class="register-card-description">Đăng ký tài khoản mới</p>

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Họ và tên" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Địa chỉ email" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "sr-only" })
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Mật khẩu", id = "password" })
                                </div>

                                <div class="form-group mb-4">
                                    <label for="confirm-password" class="sr-only">Xác nhận mật khẩu</label>
                                    <input type="password" name="confirmPassword" id="confirm-password" class="form-control" placeholder="Xác nhận mật khẩu">
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Số điện thoại" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Địa chỉ" })
                                </div>

                                <input name="register" id="register" class="btn btn-block register-btn mb-4" type="submit" value="Đăng ký">
                            }

                            @if (ViewBag.ErrorMessage != null)
                            {
                                <p class="text-danger">@ViewBag.ErrorMessage</p>
                            }

                            <p class="register-card-footer-text">Đã có tài khoản? <a href="@Url.Action("Login", "Account")" class="text-reset">Đăng nhập</a></p>
                            <nav class="register-card-footer-nav">
                                <a href="#!">Điều khoản sử dụng</a>
                                <a href="#!">Chính sách bảo mật</a>
                            </nav>
                            <div class="text-center mt-4">
                                <a href="@Url.Action("Index", "HomeUser")" class="btn btn-secondary">Quay lại trang chủ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            
            $("#registerForm").submit(function (e) {
                var password = $("#password").val();
                var confirmPassword = $("#confirm-password").val();

                if (password !== confirmPassword) {
                    e.preventDefault();  
                    alert("Mật khẩu và xác nhận mật khẩu không khớp!");
                }
            });
        });
    </script>



</body>
</html>

